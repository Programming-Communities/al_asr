{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["./components/*"],  // âœ… Make sure this has ./
      "@/app/*": ["./app/*"],
      "@/lib/*": ["./lib/*"],
      "@/public/*": ["./public/*"]
    },
    "skipLibCheck": true,
    "lib": ["dom", "dom.iterable", "es6"],
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "strict": false,
    "noEmit": true
  },
  "include": ["**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules", ".next", "out"]
}