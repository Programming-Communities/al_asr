{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["./components/*"],
      "@/app/*": ["./app/*"],
      "@/lib/*": ["./lib/*"],
      "@/public/*": ["./public/*"]
    },
    "ignoreDeprecations": "6.0",  // ✅ Added to silence warnings
    "skipLibCheck": true,
    "lib": ["dom", "dom.iterable", "es6"],
    "moduleResolution": "bundler",  // ✅ Changed from 'node' to 'bundler'
    "resolveJsonModule": true,
    "strict": false,
    "noEmit": true
  },
  "include": ["**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules", ".next", "out"]
}